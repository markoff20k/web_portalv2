.pg-profile-two-factor-auth {
	display: block;
	margin: 0 auto;
	width: 535px;
	background: var(--form-background-color);

	border-radius: 20px !important;
  
	&__header {
	
	background: transparent;

	  border-bottom: 2px solid var(--divider-color-level-2);
	  color: var(--primary-text-color);
	  font-size: calc(var(--gap) * 2.33);
	  font-style: normal;
	  height: calc(var(--gap) * 9.66);
	  line-height: calc(var(--gap) * 9.66);
	  text-transform: uppercase;
  
	  img {
		cursor: pointer;
	  }
	}
  
	&__copyablefield {
	  display: flex;
	  justify-content: space-between;
	  padding-left: calc(var(--gap) * 11.5);
	  position: relative;
  
	  &__container {
		position: relative;
		width: 100%;
  
		legend {
		  background: var(--form-background-color);
		  color: var(--primary-text-color);
		  font-size: calc(var(--gap) * 2.33);
		  left: 1%;
		  padding: 0 3px;
		  position: absolute;
		  top: -18px;
		  width: auto;
		  z-index: 5;
		}
  
		&:focus-within {
		  legend {
			color: var(--input-legend-color-active);
		  }
		}
	  }
  
	  fieldset {
		background: inherit;
		border: 1px solid var(--input-border-color);
		border-radius: calc(var(--gap) * 0.66);
		flex-grow: 1;
		overflow: hidden;
		position: relative;
		width: 100%;
  
		.cr-copyable-text-field {
		  padding: calc(var(--gap) * 0.83) calc(var(--gap) * 0.83) calc(var(--gap) * 0.83) var(--gap);
		  height: 48px;
  
		  .input-group {
			display: flex;
			flex-direction: row;
			justify-content: space-between;
  
			.custom-input {
			  width: 97.5%;
  
			  label {
				margin-top: -18px;
			  }
			}
  
			.btn-primary {
			  border-radius: 0.3rem;
			}
		  }
		}
  
		&:focus-within {
		  border: 1px solid var(--input-border-color-active) !important;
		  border-radius: calc(var(--gap) * 0.66);
		  width: 100%;
		  
  
		  legend {
			color: var(--input-legend-color-active) !important;
			background: var(--form-background-color) !important;
			
		  }
		}
  
		.cr-deposit-crypto__copyable-title {
		  margin-top: calc(var(--gap) * -1.5);
		  position: absolute;
		  width: max-content;
		}
  
		.pg-copyable-text-field {
		  &__input {
			border: none;
			padding: calc(var(--gap) * 0.83) calc(var(--gap) * 0.83) calc(var(--gap) * 0.83) var(--gap) !important;
  
			input {
			  background: transparent;
			  box-sizing: border-box;
			  color: var(--input-text-color);
			}
		  }
		}
	  }
	}
  
	&__body {
	  &--text {
		display: flex;
		color: var(--input-text-color);
		font-size: 13px;
		flex-direction: column;
		justify-content: space-between;
		background: var(--form-background-color);
  
		&--last {
		  justify-content: center;
  
		  span {
			font-size: calc(var(--font-size) * 3);
		  }
		}
  
		span {
		  font-size: calc(var(--font-size) * 3);
		}
  
		&--group {
		  align-items: center;
		  display: flex;
		  margin: calc(var(--gap) * 2) 0;
		  justify-content: space-between;
  
		  a {
			color: #FDA736;
		  }
  
		  span {
			font-size: var(--font-size);
		  }
  
		  div {
			padding: 0 calc(var(--gap) * 1.5) 0 calc(var(--gap) * 4.16);
		  }
  
		  .cr-email-form__group {
			padding: 0;
			max-width: 45%;
			margin-bottom: 0 !important;
  
			.custom-input {
			  padding: 0;
			  margin-bottom: 0 !important;
  
			  label {
				left: 36px !important;
			  }
  
			  input {
				height: 48px;
			  }
			}
		  }
		}
	  }
  
	  .pg-profile-two-factor-auth__qr {
		height: calc(var(--big-gap) * 2.66);
	  }
  
	  .cr-input {
		width: 100%;
  
		input {
		  color: var(--input-text-color);
		  font-size: var(--font-size);
		  text-align: left;
		  width: 100%;
		}
	  }
	}
  
	&__form {
	  background: transparent;
	  box-shadow: 0 10px 15px var(--shadow-color-level-2);
  
	  .cr-copyable-text-field {
		border: none;
  
		input {
		  margin: 0;
		}
	  }
	}
  
	&__error {
	  color: var(--system-red);
	}
  
	&__info {
	  color: var(--input-text-color);
	}
  
	.cr-copyable-text-field {
	  border-color: var(--input-border-color);
  
	  input {
		color: var(--input-text-color);
		font-size: var(--font-size);
	  }
  
	  .input-group-append {
		right: 1px;
	  }
	}
  }
  
  @media (min-width: 992px) {
	.pg-profile-two-factor-auth__qr {
	  height: calc(var(--big-gap) * 2) !important;
	  padding-left: 0 !important;
	}
  }
  
  @media (max-width: 991px) {
	.pg-profile-two-factor-auth {
	  width: 100%;
	}
  
	.pg-profile-two-factor-auth__qr {
	  height: calc(var(--big-gap) * 1.8) !important;
	}
  }
  
  @media (max-width: 767px) {
	.pg-profile-two-factor-auth {
	  width: 100%;
	}
  
	.pg-profile-two-factor-auth__qr {
	  display: block;
	  height: calc(var(--big-gap) * 5) !important;
	  margin: 0 auto;
	}
  }
  
  @media (max-width: 576px) {
	.pg-profile-two-factor-auth__qr {
	  display: block;
	  height: calc(var(--big-gap) * 3) !important;
	  margin: 0 auto;
	}
  
	.pg-profile-two-factor-auth__body {
	  fieldset {
		float: none;
	  }
	}
  }
  