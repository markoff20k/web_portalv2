{
	"version": "0.2.0",
	"configurations": [
	{
		"name": "Attach to Edge",
		"port": 9222,
		"request": "attach",
		"type": "msedge",
		"webRoot": "${workspaceFolder}"
	},
		{
			"command": "npm start",
			"name": "Run npm start",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Run Playground test",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["--inspect-brk", "/usr/bin/yarn", "test"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
		}
	]
}
